<h1>Edit <%= @product.name %></h1>

<%= form_for :product, url: "/products/#{@product.id}", method: :patch do |f| %>
	<div class="form-group">
		<%= f.label "Name" %>
		<%= f.text_field :name, placeholder: "Enter Product", value: @product.name %>
	</div>

	<div class="form-group">
		<%= f.label "Price" %>
		<%= f.text_field :price, placeholder: "Enter Valid Price", value: @product.price %>
	</div>

	<div class="form-group">
		<%= f.label "Description" %>
		<%= f.text_field :description, placeholder: "Description", value: @product.description %>
	</div>

	<div class="form-group">

			<% @categories.each do |category| %>
				<% if @product.categories.include?(category) %>
					<%= f.label category.name %>
					<%= check_box_tag 'categories[]',category.id, true %>
				<% else %>
					<%= f.label category.name %>
					<%= check_box_tag 'categories[]',category.id %>
				<% end %>
			<% end %>

	</div>

	<%= f.submit "Submit!", class: "btn btn-default" %>
<% end %>

<%= link_to "Want to Cancel?", "/products" %>

	