<h1>New Product</h1>

<%= form_for :product, url: "/products" do |f| %>
	<div class="form-group">
		<%= f.label "Name" %>
		<%= f.text_field :name, placeholder: "Enter New Product" %>
	</div>

	<div class="form-group">
		<%= f.label "Price" %>
		<%= f.text_field :price, placeholder: "Enter Valid Price" %>
	</div>

	<div class="form-group">
		<%= f.label "Description" %>
		<%= f.text_field :description, placeholder: "Description" %>
	</div>

	<div class="form-group">

			<% @categories.each do |category| %>
				<%= f.label category.name %>
				<%= check_box_tag 'categories[]',category.id %>
			<% end %>

	</div>

	<%= f.submit "Submit!", class: "btn btn-default" %>
<% end %>

<%= link_to "Want to Cancel?", "/products" %>

	